<div class="container">

<div class="admin-title d-flex justify-content-between align-items-center mb-4">
  <h2 class="mb-0">Posts</h2>
  <a href="/add-post" class="btn btn-primary">+ Add New</a>
</div>

<ul class="list-group">

  <% data.forEach(post => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <a href="/post/<%= post._id %>">
        <%= post.title %> &nearr;
      </a>
      <div class="admin-post-controls d-flex">
        <a href="/edit-post/<%= post._id %>" class="btn btn-sm btn-warning me-2">Edit</a>

        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST" class="m-0">
          <input type="submit" value="Delete" class="btn btn-sm btn-danger">
        </form>
      </div>
    </li>
  <% }) %>
</ul>
</div>
